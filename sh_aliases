#docker
alias dps='docker ps -a'
alias dr='docker run -it --rm'
docker_volume()
{
    host_path=$1
    containter_path=$2
    set -- "${@:3}"
    dr -v $host_path:$containter_path $@
}
alias drv='docker_volume'
alias de='docker exec -it'
alias di='docker images'
alias dst='docker stop'
